<div class="app-sidebar sidebar-shadow">
	<div class="app-header__logo">
		<div class="logo-src"></div>
		<div class="header__pane ml-auto">
			<div>
				<button
					type="button"
					class="hamburger close-sidebar-btn hamburger--elastic"
					data-class="closed-sidebar"
				>
					<span class="hamburger-box">
						<span class="hamburger-inner"></span>
					</span>
				</button>
			</div>
		</div>
	</div>
	<div class="app-header__mobile-menu">
		<div>
			<button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
				<span class="hamburger-box">
					<span class="hamburger-inner"></span>
				</span>
			</button>
		</div>
	</div>
	<div class="app-header__menu">
		<span>
			<button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
				<span class="btn-icon-wrapper">
					<i class="fa fa-ellipsis-v fa-w-6"></i>
				</span>
			</button>
		</span>
	</div>
	<div class="scrollbar-sidebar">
		<div class="app-sidebar__inner">
			<ul class="vertical-nav-menu">
				<li class="app-sidebar__heading">Khám bệnh</li>

				<li>
					<a href="/user/luot-kham/add">
						<i class="metismenu-icon pe-7s-display2"></i>
						Lượt khám mới
					</a>
				</li>

				<li class="app-sidebar__heading">Thuốc</li>
				<li>
					<a href="/user/tu-thuoc">
						<i class="metismenu-icon pe-7s-rocket"></i>
						Tủ Thuốc
					</a>
				</li>
				<li>
					<a href="/user/phieu-xuat-thuoc/add">
						<i class="metismenu-icon pe-7s-display2"></i>
						Đơn Thuốc Mới
					</a>
				</li>

				<% if (locals.user) { %> <% if (locals.user.Role=='Manager' || locals.user.Role=='Admin') { %>
				<li class="app-sidebar__heading">Quản Lý Thuốc</li>
				<li>
					<a href="/manager/tu-thuoc">
						<i class="metismenu-icon pe-7s-display2"></i>
						Tủ Thuốc
					</a>
					<a href="/manager/phieu-nhap-thuoc/add">
						<i class="metismenu-icon pe-7s-display2"></i>
						Nhập Thuốc Mới
					</a>
				</li>

				<li class="app-sidebar__heading">Manager</li>
				<li>
					<a href="/manager/luot-kham">
						<i class="metismenu-icon pe-7s-display2"></i>
						Danh Sách Lượt Khám
					</a>
					<a href="/manager/benh-nhan">
						<i class="metismenu-icon pe-7s-display2"></i>
						Danh Sách Bệnh Nhân
					</a>
					<a href="/manager/phieu-nhap-thuoc">
						<i class="metismenu-icon pe-7s-display2"></i>
						Danh sách Phiếu Nhập Thuốc
					</a>
					<a href="/manager/phieu-xuat-thuoc">
						<i class="metismenu-icon pe-7s-display2"></i>
						Danh sách Phiếu Xuất Thuốc
					</a>
					<a href="/manager/nhan-vien">
						<i class="metismenu-icon pe-7s-display2"></i>
						Danh sách Nhân Viên
					</a>
				</li>
				<% } %> <% if (locals.user.Role=='Admin' ) { %>
				<li class="app-sidebar__heading">Admin</li>
				<li>
					<a href="/admin/users">
						<i class="metismenu-icon pe-7s-display2"></i>
						Danh sách User
					</a>
				</li>
				<% } %> <% } %>
			</ul>
		</div>
	</div>
</div>
